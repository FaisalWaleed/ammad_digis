.profile-info.section                          
  .row
    .col-md-6.col-sm-12
      ._section
        %span.name #{@test_center.name}
        
    .col-md-6.col-sm-12
      ._body
        .row
          .col-md-6.col-xs-12
            %strong Address    
            - unless @test_center.address_street_1.blank?            
              %div.ellipsis
                #{@test_center.address_street_1}
            %div.ellipsis
              #{@test_center.address_territory}#{(', ' unless @test_center.address_country.blank?)} #{@test_center.address_country}
          .col-md-6.col-xs-12.has-border
            %strong Contact 
            - unless @test_center.phone_primary.blank? 
              %div.ellipsis
                #{@test_center.phone_primary}
            %div.ellipsis
              #{@test_center.email_primary}
