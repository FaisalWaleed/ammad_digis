- content_for :title, "Test"
- content_for :page_title, "Test: #{@test.name}"
   
- content_for :notice do
  - unless notice.blank?
    .row
      .col-md-7
        ._msg.success
          ._alert
            .ds-icon._ic-info
          = notice  
.row
  .col-md-7
    ._medium
      .section
        ._title
          Test Information
        ._body 
          .row
            .col-md-12
              .input-container
                %label._full-input
                  %span.name
                    Name
                = @test.name                                         
          
      %hr 
      .section
        ._title
          Tags & Profiles
        ._body       
          .input-container            
            %label._full-input
              %span.name
                Tags
            = @test.test_tag_names      
                  
          .input-container             
            %label._full-input
              %span.name
                Profile   
            = @test.test_type.name


      %hr
      .row      
        .col-md-4.col-md-offset-8
          = link_to 'Edit', edit_admin_test_path(@test), :class => "action _default pull-right"


