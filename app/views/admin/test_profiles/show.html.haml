- content_for :title, "Test Profile"
- content_for :page_title, "Test Profile: #{@test_profile.name}"
   
- content_for :notice do
  - unless notice.blank?
    .row
      .col-md-6
        ._msg.success
          ._alert
            .ds-icon._ic-info
          = notice  
.row
  .col-md-6
    ._medium
      .input-container
        %label._full-input
          %span.name
            Name
        = @test_profile.name
              
      .input-container                
        %label._full-input
          %span.name
            Test Type
        = @test_profile.test_type.name
          
      %hr
      .row      
        .col-md-4.col-md-offset-8
          = link_to 'Edit', edit_admin_test_profile_path(@test_profile), :class => "action _default pull-right"