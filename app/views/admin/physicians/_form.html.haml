._medium
  = form_for [:admin, @physician] do |f|
    - content_for :notice do
      - if @physician.errors.any?
        .row
          .col-md-7
            - @physician.errors.full_messages.each do |msg|          
              ._msg.error
                ._alert
                  .ds-icon._ic-info
                = msg                
        
    .row
      .col-md-4
        .input-container
          %label._full-input
            %span.name
              User Photo
          ._input-group
            .focused   
              .row
                .col-md-12
                  ._image-holder
                    - if @physician.avatar.url(:original).blank?
                      %span.dg-icon.ic-gallery                          
                    - else
                      = image_tag @physician.avatar.url(:thumb)          
              .row          
                .col-md-12
                  %label._full-input
                    ._file-input
                      %span Upload photo
                      = f.file_field :avatar                            
            
    %hr 
    .section
      ._title
        Personal Information
      ._body             
        .row
          .col-md-5
            .input-container
              %label._full-input
                %span.name
                  First Name
                = f.text_field :firstname, :placeholder => "", :class => 'required', :data => {"size" => "2"}
                .form-helper
                  Physician's first name is required        
                  
          .col-md-2
            .input-container                
              %label._full-input
                %span.name
                  M.I.        
                = f.text_field :middlename, :placeholder => "", :class => '', :maxlength => "2"
          .col-md-5
            .input-container                
              %label._full-input
                %span.name
                  Last Name        
                = f.text_field :lastname, :placeholder => "", :class => 'required', :data => {"size" => "2"}
                .form-helper
                  Physician's last name is required.  
                  
        .row                        
          .col-md-6
            .input-container                
              %label._full-input
                %span.name
                  Gender
                = f.select :gender_id, Gender.all.map{ |g| [g.name, g.id] }, {:include_blank => 'Select Gender...'}, :class => 'required'
                .form-helper
                  Physician's gender is required.                   
                
                
    %hr
    .section
      ._title 
        Contact Information
      ._body  
        .row
          .col-md-6      
            .input-container
              %label._full-input
                %span.name
                  Email
                = f.email_field :email_primary, :class => "required"
                .form-helper
                  Physician's email is required. This isn't a valid email.  
                
          .col-md-6      
            .input-container
              %label._full-input
                %span.name
                  Phone
                = f.text_field :phone_primary, :class => "required _tel"
                .form-helper
                  Physician's phone number is required.                   
                  
    %hr 
    .section
      ._title
        Address
      ._body 
        .row
          .col-md-4
            .input-container
              .row
                .col-md-12
                  %label._full-input
                    %span.name
                      Street Address 1
                    = f.text_field :address_street_1, :class => "required"
                    .form-helper
                      Physician's address line 1 is required.  
                    
            .input-container
              .row
                .col-md-12
                  %label._full-input
                    %span.name
                      Street Address 2 (opt.)
                    = f.text_field :address_street_2
                    
          .col-md-4                                   
            .input-container
              .row
                .col-md-12
                  %label._full-input
                    %span.name
                      Town
                    = f.text_field :address_municipality, :class => "required"
                    .form-helper
                      Physician's town is required.     
                      
            .input-container
              .row
                .col-md-12
                  %label._full-input
                    %span.name
                      Parish
                    = f.select :address_territory, PARISHES, {:include_blank => "Select a parish"}, :class => "required"
                    .form-helper
                      Physician's parish is required.   
                
          .col-md-4                  
            .input-container
              .row
                .col-md-12
                  %label._full-input
                    %span.name
                      Country
                    = f.country_select :address_country, :priority_countries => ["JM", "US"], :selected => "JM", :class => "required"
                    .form-helper
                      Physician's country is required.                      
                
    %hr
    .section
      ._title
        Registration Information 
      ._body   
        .row
          .col-md-8   
            .input-container                       
              %label._full-input
                %span.name
                  Area of Specialization              
                = f.select :specialization_id, PhysicianSpecialization.order(:name).map{ |s| [s.name, s.id] }, { :include_blank => 'General Practice' }
                                  
            .input-container                       
              %label._full-input
                %span.name
                  Registration number              
                = f.number_field :reg_num, :class => "required", :data => {"size" => "4"}   
                .form-helper
                  Physician's registration number is required.      
                  
          .col-md-4
            .input-container
              %label._full-input
                %span.name
                  Signature
              ._input-group
                .focused   
                  .row
                    .col-md-12
                      ._image-holder
                        - if @physician.signature.url(:original).blank?
                          %span.dg-icon.ic-gallery                          
                        - else
                          = image_tag @physician.signature.url(:thumb)          
                  .row          
                    .col-md-12
                      %label._full-input
                        ._file-input
                          %span Upload Signature
                          = f.file_field :signature   
                        
    %hr
    .section
      ._title
        App Settings
      ._body 
        .row
          .col-md-8
            .input-container
              %label._full-input
                %span.name
                  Password
                = f.password_field :password, :class => "required _password _optional"
                .form-helper
                  Please create a password                     
            .input-container
              %label._full-input
                %span.name
                  Confirm Password
                = f.password_field :password_confirmation, :class => "required _confirm-password _optional" 
                .form-helper
                  Password must match the one typed before.
        
        .input-container              
          %label.checkbox
            = f.check_box :active
            %span.name Active     

    %hr
    .row      
      .col-md-4.col-md-offset-8
        .action._large._normalize.pull-right._submit    
          Save
          = f.submit ''   
