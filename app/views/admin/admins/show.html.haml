- content_for :title, "Administrator"
- content_for :page_title, "Administrator: #{@admin.firstname}"
   
- content_for :notice do
  - unless notice.blank?
    .row
      .col-md-7
        ._msg.success
          ._alert
            .ds-icon._ic-info
          = notice  

.row
  .col-md-7
    ._medium
      .row
        .col-md-4
          .input-container
            %label._full-input
              %span.name
                User Photo
            ._input-group
              .focused   
                .row
                  .col-md-12
                    ._image-holder
                      - if @admin.avatar.url(:original).blank?
                        %span.dg-icon.ic-gallery                          
                      - else
                        = image_tag @admin.avatar.url(:thumb)                           

      %hr 
      .section
        ._title
          Personal Information
        ._body             
          .row
            .col-md-6
              .input-container
                %label._full-input
                  %span.name
                    First Name
                = @admin.firstname
                  
            .col-md-6
              .input-container                
                %label._full-input
                  %span.name
                    Last Name        
                = @admin.lastname
                  
      %hr
      .section
        ._title 
          Contact Information
        ._body      
          .input-container
            .row
              .col-md-6
                %label._full-input
                  %span.name
                    Email
                = @admin.email
                  
      %hr
      .section
        ._title
          App Settings
        ._body      
          .input-container            
            %label._full-input
              %span.name Active
            #{@admin.active?? 'yes':'no'}
          .input-container             
            %label._full-input                  
              %span.name Super Admin 
            #{@admin.superadmin?? 'yes':'no'}
        
      %hr
      .row      
        .col-md-4.col-md-offset-8
          = link_to 'Edit', edit_admin_admin_path(@admin), :class => "action _default pull-right"

