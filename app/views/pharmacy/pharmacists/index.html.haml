- content_for :page_title do
  Patients
  
- content_for :client_class, '_showing-full-width _hide-header'
          
._medium  
  %form
    ._expandable
      .row._parent       
        .col-md-1
          ._input-title
            Search
        .col-md-3
          .input-container
            %label._search
              %input{:type => 'text'}
        .col-md-8
          = link_to 'add new', new_pharmacy_pharmacist_path, :class => "action _large _focus pull-right"
          
  .row
    .col-md-12
      - unless @pharmacists.blank?
        %table.table
          %thead
            %tr
              %th
              %th Name
              %th Email primary
              %th Phone primary
              %th Reg num   

          %tbody
            - @pharmacists.each do |pharmacist|
              %tr
                %td
                  ._thumb
                    = image_tag pharmacist.avatar.url(:small)
                %td
                  = link_to pharmacist.name, edit_pharmacy_pharmacist_path(pharmacist)
                %td= pharmacist.email_primary
                %td= pharmacist.phone_primary
                %td
                  = pharmacist.reg_num
      - else
        ._prompt-wrap
          ._prompt 
            - unless @term.blank?
              No pharmacists found with 
              %span
                #{@term}.             
            - else             
              No pharmacists have been created.                  
              

