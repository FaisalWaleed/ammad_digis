- content_for :title, "Subscription"
- content_for :page_title, "Subscription: #{@subscription.identifier}"
   
- content_for :notice do
  - unless notice.blank?
    .row
      .col-md-7
        ._msg.success
          ._alert
            .ds-icon._ic-info
          = notice  
.row
  .col-md-7
    ._medium
      .section
        ._title
          Subscription
        ._body                 
          .row
            .col-md-4
              .input-container
                %label._full-input
                  %span.name
                    Total                
                = @subscription.subscription_period_amount                   
                = @subscription.subscription_period_unit
        
            .col-md-4
              .input-container
                %label._full-input
                  %span.name
                    Grace   
                = @subscription.grace_period_amount          
                = @subscription.grace_period_unit
                  
            .col-md-4
              .input-container
                %label._full-input
                  %span.name
                    Trial   
                = @subscription.trial_period_amount               
                = @subscription.trial_period_unit
                  
      %hr 
      .section
        ._title
          Limits
        ._body                 
          .row
            .col-md-6
              .input-container
                %label._full-input
                  %span.name
                    Subscriber Limit      
                = @subscription.subscriber_limit
            .col-md-6
              .input-container
                %label._full-input
                  %span.name
                    Organization Limit 
                = @subscription.organization_limit
                  
                  
      %hr 
      .section
        ._title
          App Settings
        ._body              
          .row
            .col-md-6
              .input-container              
                %label
                  %span.name Renewal notification:
                #{@subscription.renew_notify?? 'yes':'no'} 
                
            .col-md-6                  
              .input-container              
                %label
                  %span.name Auto renew:                   
                #{@subscription.auto_renew?? 'yes':'no'}
                  
                  
      %hr
      .row      
        .col-md-4.col-md-offset-8
          = link_to 'Edit', edit_admin_subscription_path(@subscription), :class => "action _default pull-right"    
