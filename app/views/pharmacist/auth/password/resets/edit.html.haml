- content_for :page_title do
  Update your password
  
.row
  .col-xs-12.col-xs-offset-0.col-sm-8.col-sm-offset-2.col-md-8.col-md-offset-2.col-lg-8.col-lg-offset-2
    .row
      .col-xs-12.col-xs-offset-0.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
        ._medium
          = form_tag pharmacist_password_reset_path, :method => :put, :autocomplete => "off" do
            = hidden_field_tag :token, @pharmacist.perishable_token
            .section
              ._section
                ._logo
                  .row
                    .col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3.col-xs-6.col-xs-offset-3
                      = image_tag 'logo_lg.svg', "data-svg-fallback" => image_path('logo_lg.png')
                      
                - unless flash.blank?
                  = render 'partials/notice_flash'                
                  
              ._body
                .input-container   
                  .row
                    .col-md-12
                      %p
                        Please enter the new password below and then press "Update Password".                 
                  .row
                    .col-md-12
                      %label._full-input
                        = password_field_tag :password, "", :class => 'allow-submit _password required', :placeholder => "Your new password"
                        .form-helper
                          Your new password is required. 
                          
                .input-container                  
                  .row
                    .col-md-12
                      %label._full-input
                        = password_field_tag :password_confirmation, "", :class => '_confirm-password required', :placeholder => "Confirm your new password"
                        .form-helper
                          Enter your password again.                           
                          
                .input-container   
                  .row
                    .col-md-12
                      .action._huge._fill._normalize._submit
                        Update Password                    
                        = submit_tag ""
                        
              .row
                .col-md-12
                  %p._small
                    Cancel and return to
                    #{link_to "Log in", pharmacist_login_path, :class => "_link"}.                          
    
