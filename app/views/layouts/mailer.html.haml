%body{:leftmargin => "0", :marginheight => "0", :marginwidth => "0", :offset => "0", :style => "background-color: #FFFFFF;padding-top: 10px;line-height: 1.3;", :topmargin => "0"}
  %center{:style => "line-height: 1.3;"}
    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :style => "line-height: 1.3;", :width => "100%;"}
      %tr{:style => "line-height: 1.3;"}
        %td{:align => "center", :style => "line-height: 1.3;", :valign => "top"}
          %table#outer_wrapper{:style => "border-collapse: collapse;border: none;color: #333;padding: 0;margin: 0 auto 100px auto;width: 600px; max-width: 600px;font: 12px/1em 'Helvetica Neue', Arial, Helvetica; line-height: 1.3;"}
            %tbody{:style => "line-height: 1.3; color: #222222;"}
              %tr{:style => "background-color: #FFFFFF; border-radius: 4px; line-height: 1.3;"}
                %td{:style => "border-spacing: 0;padding: 15px;line-height: 1.3;"}
                  %table#inner_wrapper{:cellspacing => "0", :style => "width: 100%;padding: 20px;font-size: 14px;line-height: 1.3;"}
                    %tbody{:style => "line-height: 1.3;"}
                      %tr{:style => "line-height: 1.3;"}
                        %td{:style => "border-spacing: 0;padding: 0;clear: both;float: none; line-height: 1;"}
                          %div{:style => "margin: 20px 0; display: table; max-width: 100px;"}
                            = image_tag 'logo_lg.png', :style => "width: 100%;max-width: 180px;min-width: auto9;height: auto;vertical-align: middle;border: none;-ms-interpolation-mode: bicubic;font-size: 14px;font-weight: bold;line-height: 1.300%;outline: none;text-decoration: none;text-transform: capitalize;"        
                          %br{:style => "line-height: 1.3;"}/                    
                      = yield
                      %tr{:style => "line-height: 1.3;"}
                        %td{:style => "line-height: 1.3;"}
                          %div{:style => "font-size: 13px;line-height: 1.3; padding-top: 20px;"}                                                           
