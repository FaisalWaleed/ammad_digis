%h2 Admin Sign Up
= form_for(@admin, :as => :admin) do |f|
  %p
    = label_tag :email
    %br/
    = f.text_field :email
  %p
    = label_tag :password
    %br/
    = f.password_field :password
  %p
    = label_tag :password_confirmation
    %br/
    = f.password_field :password_confirmation
  - unless Admin.superadmins.count > 0
    = f.hidden_field :superadmin, :value => true
  = submit_tag 'Register'
